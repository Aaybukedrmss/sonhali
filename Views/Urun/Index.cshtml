@using dotnet_store.Models
@model List<Urun>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h2 class="mb-4">Ürün Listesi</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                    @await Html.PartialAsync("Partials/_UrunCard", item)
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Ürün bulunamadı</h4>
            <p class="text-muted">Henüz hiç ürün eklenmemiş.</p>
        </div>
    }
</div>


@section Scripts {
    <script>
        // Bootstrap alert'lerini otomatik kapat - jQuery çakışmasını önle
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    if (alert.classList.contains('alert-dismissible')) {
                        const closeBtn = alert.querySelector('.btn-close');
                        if (closeBtn) {
                            closeBtn.click();
                        }
                    }
                });
            }, 5000);
        });
    </script>
}