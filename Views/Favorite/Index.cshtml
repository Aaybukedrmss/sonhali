</div>

<script>
// Favorilerim sayfasÄ± iÃ§in favorileme sistemi
document.addEventListener('DOMContentLoaded', function() {
    console.log('Favorilerim sayfasÄ± favorileme sistemi baÅŸlatÄ±lÄ±yor');
    
    // Favorilerim sayfasÄ± favorileme butonlarÄ±nÄ± bul
    const favoritesPageButtons = document.querySelectorAll('.product-card-fav-toggle');
    console.log(`${favoritesPageButtons.length} favorilerim sayfasÄ± favorileme butonu bulundu`);
    
    if (favoritesPageButtons.length === 0) {
        console.log('HiÃ§ favorilerim sayfasÄ± favorileme butonu bulunamadÄ±');
        return;
    }
    
    favoritesPageButtons.forEach((button, index) => {
        console.log(`Favorilerim sayfasÄ± buton ${index + 1}:`, button);
        
        // Event listener ekle
        button.addEventListener('click', function(event) {
            console.log('Favorilerim sayfasÄ± favorileme butonu tÄ±klandÄ±!');
            
            event.preventDefault();
            event.stopPropagation();
            
            const urunId = button.getAttribute('data-urun-id');
            console.log('Favorilerim sayfasÄ± UrunId:', urunId);
            
            if (!urunId) {
                console.error('Favorilerim sayfasÄ± UrunId bulunamadÄ±!');
                return;
            }
            
            // Butonu devre dÄ±ÅŸÄ± bÄ±rak
            button.disabled = true;
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            
            // Token'Ä± bul
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            if (!tokenInput) {
                console.error('Anti-forgery token bulunamadÄ±!');
                button.disabled = false;
                button.innerHTML = originalHTML;
                return;
            }
            
            const token = tokenInput.value;
            
            // AJAX isteÄŸi - timeout ile
            const controller = new AbortController();
            const timeoutId = setTimeout(() => controller.abort(), 5000); // 5 saniye timeout
            
            fetch('/Favorite/ToggleAjax', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `urunId=${encodeURIComponent(urunId)}&__RequestVerificationToken=${encodeURIComponent(token)}`,
                signal: controller.signal
            })
            .then(response => {
                clearTimeout(timeoutId); // Timeout'u temizle
                if (!response.ok) {
                    if (response.status === 401) {
                        showNotification('Favorilere eklemek iÃ§in giriÅŸ yapmalÄ±sÄ±nÄ±z!', 'error');
                        setTimeout(() => {
                            window.location.href = '/Account/Login';
                        }, 2000);
                        return;
                    }
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Favorilerim sayfasÄ± sunucu yanÄ±tÄ±:', data);
                
                if (!data.success) {
                    throw new Error(data.error || 'Bilinmeyen hata');
                }
                
                // Butonu gÃ¼ncelle
                if (data.isFavorite) {
                    button.classList.add('favorite-active');
                    showNotification('â¤ï¸ ÃœrÃ¼n favorilere eklendi!', 'success');
                } else {
                    button.classList.remove('favorite-active');
                    showNotification('ğŸ’” ÃœrÃ¼n favorilerden Ã§Ä±karÄ±ldÄ±!', 'info');
                    
                    // Favorilerim sayfasÄ±ndan Ã§Ä±karÄ±ldÄ±ÄŸÄ±nda Ã¼rÃ¼n kartÄ±nÄ± gizle
                    setTimeout(() => {
                        const productCard = button.closest('.col-12');
                        if (productCard) {
                            productCard.style.transition = 'opacity 0.3s ease';
                            productCard.style.opacity = '0';
                            setTimeout(() => {
                                productCard.remove();
                                
                                // EÄŸer hiÃ§ Ã¼rÃ¼n kalmadÄ±ysa mesaj gÃ¶ster
                                const remainingCards = document.querySelectorAll('.col-12.col-sm-6.col-md-4.col-lg-3');
                                if (remainingCards.length === 0) {
                                    const container = document.querySelector('.row.g-3');
                                    if (container) {
                                        container.innerHTML = '<div class="col-12"><div class="alert alert-info text-center">HenÃ¼z favori Ã¼rÃ¼nÃ¼nÃ¼z bulunmuyor.</div></div>';
                                    }
                                }
                            }, 300);
                        }
                    }, 1000);
                }
                
                // Butonu tekrar aktif et
                button.disabled = false;
            })
            .catch(error => {
                clearTimeout(timeoutId); // Timeout'u temizle
                console.error('Favorilerim sayfasÄ± favori iÅŸlemi hatasÄ±:', error);
                
                if (error.name === 'AbortError') {
                    showNotification('â±ï¸ Ä°ÅŸlem zaman aÅŸÄ±mÄ±na uÄŸradÄ±!', 'error');
                } else {
                    showNotification('âŒ Hata oluÅŸtu!', 'error');
                }
                
                // Butonu tekrar aktif et
                button.disabled = false;
                button.innerHTML = originalHTML;
            });
        });
        
        console.log(`Favorilerim sayfasÄ± buton ${index + 1} iÃ§in event listener eklendi`);
    });
    
    console.log('TÃ¼m favorilerim sayfasÄ± favorileme butonlarÄ±na event listener eklendi');
});
</script>


