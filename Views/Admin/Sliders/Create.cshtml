@model dotnet_store.Models.SliderCreateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-4">
    <h2>Yeni Slider</h2>
    <form asp-controller="AdminSliders" asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
        @Html.AntiForgeryToken()
        <div class="col-md-6">
            <label class="form-label">Başlık</label>
            <input asp-for="Baslik" class="form-control" />
            <span asp-validation-for="Baslik" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control"></textarea>
        </div>
        <div class="col-md-6">
            <label class="form-label">Resim</label>
            <input asp-for="Resim" type="file" class="form-control" />
            <span asp-validation-for="Resim" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Index</label>
            <input asp-for="Index" class="form-control" />
        </div>
        <div class="col-md-3 form-check mt-4">
            <input asp-for="Aktif" class="form-check-input" />
            <label class="form-check-label">Aktif</label>
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Kaydet</button>
            <a asp-controller="AdminSliders" asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</section>


