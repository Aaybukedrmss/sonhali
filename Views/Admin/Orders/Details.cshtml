@model dotnet_store.Controllers.Admin.AdminOrderDetailsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allowed = new[] { "Yeni", "Onay", "Kargoya Verildi", "Iptal", "Iade" };
}

<section class="container my-4">
    <h2>Sipariş Detayı - @Model.Order.OrderNumber</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <div><strong>Durum:</strong> @Model.Order.Status</div>
                <div><strong>Toplam:</strong> @Model.Order.Total.ToString("C2")</div>
                <div><strong>Tarih:</strong> @Model.Order.CreatedAt.ToLocalTime().ToString("g")</div>
            </div>
            <form action="/admin/orders/update-status" method="post" class="d-flex align-items-center gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="orderNumber" value="@Model.Order.OrderNumber" />
                <select name="status" class="form-select">
                    @foreach (var s in allowed)
                    {
                        <option value="@s" selected="@(Model.Order.Status == s ? "selected" : null)">@s</option>
                    }
                </select>
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </form>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Birim Fiyat</th>
                <th>Ara Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.Urun?.ProductName</td>
                    <td>@i.Quantity</td>
                    <td>@i.UnitPrice.ToString("C2")</td>
                    <td>@(i.UnitPrice * i.Quantity).ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-secondary">Geri</a>
</section>


