@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-4">
    <h1>Yönetim Paneli</h1>
    <div class="list-group mt-3">
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a class="list-group-item list-group-item-action" href="/admin/orders">Sipariş Yönetimi</a>
        }
        @if (User.IsInRole("Admin"))
        {
            <a class="list-group-item list-group-item-action" href="/admin/sliders">Slider Yönetimi</a>
            <a class="list-group-item list-group-item-action" href="/admin/categories">Kategori Yönetimi</a>
            <a class="list-group-item list-group-item-action" href="/admin/products">Ürün Yönetimi</a>
            <a class="list-group-item list-group-item-action" href="/admin/roles">Rol Yönetimi</a>
            <a class="list-group-item list-group-item-action" href="/admin/settings">Site Ayarları</a>
        }
        @if (User.IsInRole("Admin") || User.IsInRole("Support"))
        {
            <a class="list-group-item list-group-item-action" href="/admin/support">Destek Talepleri</a>
        }
        @if (User.IsInRole("Admin"))
        {
            <form asp-controller="AdminSetup" asp-action="MakeMeAdmin" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">Beni Admin Yap</button>
            </form>
        }
    </div>
</section>


