@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-4">
    <div class="row">
        <div class="col-md-8">
            <h1><i class="fas fa-headset me-2"></i>Destek Paneli</h1>
            <p class="text-muted">Destek taleplerini yönetebilirsiniz</p>
            
            <!-- Debug Bilgileri -->
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-1"></i>Debug Bilgileri:</h6>
                <p class="mb-1"><strong>Kullanıcı:</strong> @User.Identity.Name</p>
                <p class="mb-1"><strong>Roller:</strong> 
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    @if (User.IsInRole("Support"))
                    {
                        <span class="badge bg-primary">Support</span>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <span class="badge bg-warning">Manager</span>
                    }
                    @if (User.IsInRole("Editor"))
                    {
                        <span class="badge bg-success">Editor</span>
                    }
                </p>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-shield me-1"></i>Destek Uzmanı</h5>
                    <p class="card-text mb-0">@User.Identity.Name</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Yapabileceğiniz İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-grid gap-2">
                                <a href="/admin/support" class="btn btn-primary btn-lg">
                                    <i class="fas fa-life-ring me-2"></i>Destek Taleplerini Görüntüle
                                </a>
                                <a href="/Help" class="btn btn-outline-secondary">
                                    <i class="fas fa-question-circle me-2"></i>Yardım Sayfası</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6><i class="fas fa-info-circle me-1"></i>Yetkileriniz</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><i class="fas fa-check text-success me-1"></i>Destek taleplerini görüntüleme</li>
                                        <li><i class="fas fa-check text-success me-1"></i>Destek taleplerini silme</li>
                                        <li><i class="fas fa-check text-success me-1"></i>Kullanıcı bilgilerini görme</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Erişim Kartları -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-flask me-2"></i>Erişim Testi</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h6>Destek Talepleri</h6>
                                    <a href="/admin/support" class="btn btn-light btn-sm">Test Et</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h6>Ürün Yönetimi</h6>
                                    <a href="/admin/products" class="btn btn-light btn-sm">Test Et</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h6>Rol Yönetimi</h6>
                                    <a href="/admin/roles" class="btn btn-light btn-sm">Test Et</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h6>Site Ayarları</h6>
                                    <a href="/admin/settings" class="btn btn-light btn-sm">Test Et</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Hızlı İstatistikler</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h3><i class="fas fa-ticket-alt"></i></h3>
                                    <h5>Tüm Talepler</h5>
                                    <p class="mb-0">Destek taleplerini görüntülemek için yukarıdaki butona tıklayın</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h3><i class="fas fa-clock"></i></h3>
                                    <h5>Bekleyen</h5>
                                    <p class="mb-0">Yanıt bekleyen talepler</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h3><i class="fas fa-check-circle"></i></h3>
                                    <h5>Çözülen</h5>
                                    <p class="mb-0">Tamamlanan talepler</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h3><i class="fas fa-exclamation-triangle"></i></h3>
                                    <h5>Acil</h5>
                                    <p class="mb-0">Öncelikli talepler</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: 1px solid rgba(0, 0, 0, 0.125);
    transition: box-shadow 0.15s ease-in-out;
}

.card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.btn-lg {
    padding: 0.75rem 1.5rem;
    font-size: 1.1rem;
}

.bg-primary {
    background-color: #0d6efd !important;
}

.bg-info {
    background-color: #0dcaf0 !important;
}

.bg-warning {
    background-color: #ffc107 !important;
}

.bg-success {
    background-color: #198754 !important;
}

.bg-danger {
    background-color: #dc3545 !important;
}
</style>
