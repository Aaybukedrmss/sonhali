@model List<dotnet_store.Models.Admin.UserRoleViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kullanıcı Rol Yönetimi";
}

<section class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog me-2"></i>Kullanıcı Rol Yönetimi</h2>
        <a href="/admin/roles" class="btn btn-outline-primary">
            <i class="fas fa-shield-alt me-1"></i>Rol Yönetimi
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Yeni Rol Ata</h5>
        </div>
        <div class="card-body">
            <form asp-action="Assign" asp-controller="AdminRoles" method="post" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Kullanıcı</label>
                    <select name="usernameOrEmail" class="form-select" required>
                        <option value="">Kullanıcı seçin...</option>
                        @foreach (var userRole in Model)
                        {
                            <option value="@userRole.User.UserName">@userRole.User.UserName (@userRole.User.Email)</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Rol</label>
                    <select name="role" class="form-select" required>
                        <option value="">Rol seçin...</option>
                        <option value="Admin">Admin</option>
                        <option value="Editor">Editor</option>
                        <option value="Manager">Manager</option>
                        <option value="Support">Support</option>
                        <option value="Moderator">Moderator</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-success d-block" type="submit">
                        <i class="fas fa-plus me-1"></i>Rol Ata
                    </button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Kullanıcı Rolleri</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-user me-1"></i>Kullanıcı</th>
                            <th><i class="fas fa-envelope me-1"></i>E-posta</th>
                            <th><i class="fas fa-shield-alt me-1"></i>Roller</th>
                            <th><i class="fas fa-cogs me-1"></i>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userRole in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                            @userRole.User.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <strong>@userRole.User.UserName</strong>
                                            <br>
                                            <small class="text-muted">ID: @userRole.User.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@userRole.User.Email</td>
                                <td>
                                    @if (userRole.Roles.Any())
                                    {
                                        @foreach (var role in userRole.Roles)
                                        {
                                            var roleClass = role switch
                                            {
                                                "Admin" => "bg-danger",
                                                "Editor" => "bg-success", 
                                                "Manager" => "bg-warning",
                                                "Support" => "bg-info",
                                                "Moderator" => "bg-secondary",
                                                _ => "bg-primary"
                                            };
                                            var roleDescription = role switch
                                            {
                                                "Admin" => "Tam yetki",
                                                "Editor" => "Ürün yönetimi",
                                                "Manager" => "Sipariş yönetimi", 
                                                "Support" => "Destek yönetimi",
                                                "Moderator" => "İçerik moderasyonu",
                                                _ => "Genel kullanıcı"
                                            };
                                            <span class="badge @roleClass me-1" title="@roleDescription">
                                                <i class="fas fa-shield-alt me-1"></i>@role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-user-slash me-1"></i>Rol atanmamış
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (userRole.Roles.Any())
                                        {
                                            @foreach (var role in userRole.Roles)
                                            {
                                                <form asp-action="RemoveRole" asp-controller="AdminRoles" method="post" class="d-inline me-1">
                                                    <input type="hidden" name="userId" value="@userRole.User.Id" />
                                                    <input type="hidden" name="role" value="@role" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('@role rolünü kaldırmak istediğinizden emin misiniz?')">
                                                        <i class="fas fa-times me-1"></i>@role
                                                    </button>
                                                    @Html.AntiForgeryToken()
                                                </form>
                                            }
                                        }
                                        <a href="/admin/roles/user-permissions/@userRole.User.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-key me-1"></i>İzinler
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 16px;
    font-weight: bold;
}

.table th {
    border-top: none;
}

.badge {
    font-size: 0.75em;
}

.btn-sm {
    font-size: 0.8em;
}
</style>

<script>
// Alert'leri otomatik kapat
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            if (alert.classList.contains('alert-dismissible')) {
                const closeBtn = alert.querySelector('.btn-close');
                if (closeBtn) {
                    closeBtn.click();
                }
            }
        });
    }, 5000);
});
</script>
