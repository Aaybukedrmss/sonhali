@model List<dotnet_store.Models.Admin.Permission>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "İzin Yönetimi";
}

<section class="container my-4">
    <div class="row">
        <div class="col-md-8">
            <h2><i class="fas fa-key me-2"></i>İzin Yönetimi</h2>
            <p class="text-muted">Sistemdeki tüm izinleri yönetebilirsiniz</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPermissionModal">
                <i class="fas fa-plus me-1"></i>Yeni İzin Ekle
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-1"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-1"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Mevcut İzinler</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="row">
                    @{
                        var groupedPermissions = Model.GroupBy(p => p.Category).ToList();
                    }
                    @foreach (var permission in groupedPermissions)
                    {
                        <div class="col-md-6 mb-4">
                            <h6 class="text-primary"><i class="fas fa-folder me-1"></i>@permission.Key</h6>
                            <div class="list-group">
                                @foreach (var perm in permission)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@perm.Name</strong>
                                            <br>
                                            <small class="text-muted">@perm.Description</small>
                                        </div>
                                        <div>
                                            <span class="badge bg-secondary">@perm.Id</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-1"></i>Henüz izin tanımlanmamış.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="/admin/roles" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Rol Yönetimine Dön
        </a>
    </div>
</section>

<!-- Yeni İzin Ekleme Modal -->
<div class="modal fade" id="addPermissionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus me-1"></i>Yeni İzin Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreatePermission" asp-controller="AdminRoles" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">İzin Adı</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Kategori</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="">Kategori Seçin</option>
                            <option value="Ürün Yönetimi">Ürün Yönetimi</option>
                            <option value="Sipariş Yönetimi">Sipariş Yönetimi</option>
                            <option value="Kullanıcı Yönetimi">Kullanıcı Yönetimi</option>
                            <option value="Rol Yönetimi">Rol Yönetimi</option>
                            <option value="Site Yönetimi">Site Yönetimi</option>
                            <option value="Destek Yönetimi">Destek Yönetimi</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">İzin Ekle</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

<script>
// Auto-close alerts
setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        var bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
    });
}, 5000);
</script>
