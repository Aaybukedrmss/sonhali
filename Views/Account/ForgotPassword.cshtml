@model ForgotPasswordModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <h3 class="mb-1">Şifremi Unuttum</h3>
                    <p class="text-muted mb-0">E-posta adresinizi girin, sıfırlama linki oluşturulacaktır</p>
                </div>

                <form asp-action="ForgotPassword" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@site.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Sıfırlama Linki Gönder</button>
                </form>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


