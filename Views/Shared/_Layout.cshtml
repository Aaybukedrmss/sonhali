<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Engagement&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="icon" type="image/x-icon" href="~/kirazco2.ico?v=3">
    <link rel="shortcut icon" href="~/favicon.ico?v=3">
    
    <title>E-Commerce</title>
</head>

<body class="bg-light">

    <header>
        @await Html.PartialAsync("Partials/_Topbar")
        @await Html.PartialAsync("Partials/_Navbar")
        @RenderSection("Bar", required: false)
        

    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Global anti-forgery token for AJAX requests (e.g., favorite toggles) -->
    <form method="post" style="display:none">
        @Html.AntiForgeryToken()
        <input type="hidden" value="1" />
    </form>


    @await Html.PartialAsync("Partials/_Footer")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script>
        console.log('Layout script çalışıyor');
    </script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>