@{
    ViewData["Title"] = "Sipariş Onayı";
}

@section Bar{
    @await Html.PartialAsync("Partials/_Navbar")
}

<div class="container py-5 text-center">
    <i class="fas fa-check-circle text-success" style="font-size:64px;"></i>
    <h3 class="mt-3">Siparişiniz alındı!</h3>
    <p class="text-muted mb-1">Sipariş No: <strong>@ViewBag.OrderNumber</strong></p>
    <p class="text-muted">Seçilen kargo: @ViewBag.Provider</p>
    @if (ViewBag.Total != null)
    {
        <p class="text-muted">Toplam: <strong>@(((decimal)ViewBag.Total).ToString("C"))</strong></p>
    }
    @if(Context.Request.Query.ContainsKey("paymentId") || Context.Request.Query.ContainsKey("conv"))
    {
        <hr />
        <div class="mt-2">
            <p class="mb-1">Ödeme No: <strong>@Context.Request.Query["paymentId"]</strong></p>
            <p class="mb-1">ConversationId: <strong>@Context.Request.Query["conv"]</strong></p>
            @if(Context.Request.Query.ContainsKey("auth")){
                <p class="mb-1">AuthCode: <strong>@Context.Request.Query["auth"]</strong></p>
            }
        </div>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Alışverişe Devam Et</a>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary mt-3 ms-2">Sepete Dön</a>
 </div>


